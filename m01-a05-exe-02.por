programa
{
	
	funcao inicio()
	{
		caracter nome
		inteiro nasc
		real sal
		escreva ("Nome do Funcionário: ")
		leia (nome)
		escreva ("Ano de Nascimento: ")
		leia (nasc)
		escreva ("Salário: R$ ")
		leia (sal)
		escreva ("---------- FICHA FUNCIONAL ----------\n")
		escreva ("NOME: \n"+nome)
		escreva ("NASCIMENTO: "+nasc)
		escreva ("SALÁRIO: "+sal)
		escreva ("=====================================")
	}
}
